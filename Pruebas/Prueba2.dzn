% Escenario 2:
% - 3 plantas: nuclear, hidroeléctrica, térmica
% - 2 clientes
% - 3 días
% Se cubre 50% de la demanda mínima; capacidades estándar.

p = 3;
m = 2;
n = 3;

plantNames = ["Nuclear", "Hidroelectrica", "Termica"];
clientNames = ["ClienteA", "ClienteB"];

% Costos de producción
cost = [40.0, 25.0, 50.0];

% Capacidades por planta
capacity = [1000, 300, 500];

% Pagos por MW de cada cliente
payment = [100.0, 120.0];

% Demanda
demand = array2d(1..m, 1..n, [
   80, 110, 90,    % ClienteA, días 1..3
   150, 98, 340    % ClienteB, días 1..3
]);

% Porcentaje mínimo
G = 0.50;

% Umbral para régimen alto
highThreshold = [0.8, 0.8, 0.8];

% Días consecutivos en alto
maxConsecutiveHigh = [1, 1, 1];
